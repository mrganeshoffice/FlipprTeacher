<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.flipprteachear">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:name="com.app.flipprteachear.utillsa.Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.FlipprTeachear">
        <activity android:name="com.app.flipprteachear.home.view.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:exported="true">

        </activity>
        <activity android:name=".LoginRegistration.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true">

        </activity>
        <activity android:name="com.app.flipprteachear.LoginRegistration.SignUpActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true">

        </activity>
        <activity android:name="com.app.flipprteachear.LoginRegistration.LinkedAccount_Activity"
            android:screenOrientation="portrait"
            android:exported="true">

        </activity>

        <activity android:name=".LoginRegistration.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>

        <activity android:name="com.app.flipprteachear.LoginRegistration.Splash"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
<!--    <queries>-->
<!--        <package android:name="com.google.android.youtube" />-->
<!--    </queries>-->

</manifest>