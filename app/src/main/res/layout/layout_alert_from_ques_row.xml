<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="100dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/llQues_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_quetype_case"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/ceraprobold"
                    android:gravity="center"
                    android:text="Attention!"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/ceraprobold"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="@color/DarkGray2"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/tvPause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ceraprobold"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="@string/pause_now"
                    android:textStyle="bold"
                    android:textColor="@color/darkshyblue"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/grey"
                    />
                <Button
                    android:id="@+id/tvContinue"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="8dp"
                    android:fontFamily="@font/ceraprobold"
                    android:gravity="center"
                    android:text="@string/continue_session"
                    android:textStyle="bold"
                    android:textColor="@color/darkshyblue"
                    android:textSize="16dp" />
            </LinearLayout>


        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>