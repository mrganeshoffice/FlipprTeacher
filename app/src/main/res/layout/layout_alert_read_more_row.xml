<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_quetype_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="12dp"
                android:fontFamily="@font/ceraprobold"
                android:gravity="center"
                android:text="Multiple Answer MCQ"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/llQues_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="15dp"
                android:orientation="vertical">

                <katex.hourglass.in.mathlib.MathView
                    android:id="@+id/tv_QuesDetail_case"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/ceraprobold"
                    android:gravity="start"
                    android:lineSpacingExtra="1dp"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    app:setTextColor="@color/white"
                    android:textColor="@color/navicolor"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <katex.hourglass.in.mathlib.MathView
                    android:id="@+id/tv_case2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ceraprobold"
                    android:gravity="start"
                    android:lineSpacingExtra="1dp"
                    android:minHeight="150dp"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="normal" />

            </LinearLayout>


        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>