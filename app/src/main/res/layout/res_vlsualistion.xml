<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    >
    <RelativeLayout
        android:id="@+id/relM"
        android:layout_width="match_parent"
        android:layout_height="155dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:layout_marginTop="6dp"
            android:id="@+id/Card"
            android:orientation="vertical"
            android:background="@drawable/round_boundary_whiteonly"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardimage"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Image_concave"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_alignStart="@id/cardoption"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_Image"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardoption"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/navicolor">
            <TextView
                android:id="@+id/tv_sereas"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="2dp"
                android:fontFamily="@font/neutonregular"
                android:text="A">
            </TextView>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cross"
            android:id="@+id/ic_cancel"
            android:visibility="gone"
            android:layout_marginRight="0dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tick"
            android:id="@+id/ic_right"
            android:visibility="gone"
            android:layout_marginRight="0dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relM"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:spanCount="5"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:id="@+id/rv_ImageFull"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            android:src="@drawable/ic_doubleaddrodown"
            app:tint="#FF6347">
        </ImageView>
    </RelativeLayout>

</RelativeLayout>